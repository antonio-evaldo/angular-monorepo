{
  "name": "input",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/input/src",
  "prefix": "lib",
  "projectType": "library",
  "tags": [],
  "targets": {
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/input/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "storybook": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "port": 4400,
        "configDir": "libs/input/.storybook",
        "browserTarget": "input:build-storybook",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@storybook/angular:build-storybook",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/input",
        "configDir": "libs/input/.storybook",
        "browserTarget": "input:build-storybook",
        "compodoc": false,
        "styles": ["libs/utils/styles/globals.css"],
        "stylePreprocessorOptions": {
          "includePaths": ["libs/utils/styles"]
        }
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "static-storybook": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "input:build-storybook",
        "staticFilePath": "dist/storybook/input",
        "spa": true
      },
      "configurations": {
        "ci": {
          "buildTarget": "input:build-storybook:ci"
        }
      }
    }
  }
}
